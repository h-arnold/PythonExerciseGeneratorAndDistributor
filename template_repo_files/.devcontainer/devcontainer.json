{
  "name": "Python Tutor Student Environment",
  "image": "ghcr.io/h-arnold/pythonexercisegeneratoranddistributor/student-environment:latest",

  // Configure VS Code settings
  "customizations": {
    "vscode": {
      // Extensions to install - minimal set for student exercises
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ],

      // VS Code settings
      "settings": {
        // Disable features to keep environment simple
        "workbench.startupEditor": "none",
        "workbench.tips.enabled": false,
        "workbench.welcomePage.walkthroughs.openOnInstall": false
      }
        }
      },


  // Post-create command to install the exercise package if pyproject.toml exists
  "postCreateCommand": "[ -f pyproject.toml ] && (uv sync && . .venv/bin/activate) || echo 'Warning: No pyproject.toml found. The environment may not be properly configured.'",

  // Use the 'vscode' user which already exists in the base image
  "remoteUser": "vscode",

  // Environment variables
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1"
  },

  // Features to disable (keep minimal)
  "features": {}
}
